
<CustButton@Button>:
    fontsize:45
    background_color: .2, .1, .73, 1

<CalculatorLayout>:
    id:calculator
    display:entry
    rows:6

    BoxLayout:
        size_hint: (0.5, 3)
        TextInput:
            id:entry
            font_size:50
            multiline:False

    BoxLayout:
        CustButton:
            text:'AC'
            on_press:entry.text = ''

        CustButton:
            on_press:entry.text = entry.text[0:-1]
            Image:
                source: 'image/delete.png'
                center: self.parent.center

    BoxLayout:
        CustButton:
            text:'7'
            on_press:entry.text += self.text
        CustButton:
            text:'8'
            on_press:entry.text += self.text
        CustButton:
            text:'9'
            on_press:entry.text += self.text
        CustButton:
            id:plus
            text:"+"
            on_press: calculator.validate(entry.text, self.text)

    BoxLayout:
        CustButton:
            text:'4'
            on_press:entry.text += self.text
        CustButton:
            text:'5'
            on_press:entry.text += self.text
        CustButton:
            text:'6'
            on_press:entry.text += self.text
        CustButton:
            id:minus
            text:'-'
            on_press:calculator.validate(entry.text, self.text)

    BoxLayout:
        CustButton:
            text:'3'
            on_press:entry.text += self.text
        CustButton:
            text:'2'
            on_press:entry.text += self.text
        CustButton:
            text:'1'
            on_press:entry.text += self.text
        CustButton:
            id:multiply
            text:"*"
            on_press:calculator.validate(entry.text, self.text)

    BoxLayout:
        CustButton:
            id:dot
            text:'.'
            on_press:calculator.validate(entry.text, self.text)
        CustButton:
            text:'0'
            on_press:entry.text += self.text
        CustButton:
            id:equal
            text:'='
            on_press:calculator.calculate(entry.text)
        CustButton:
            id:divide
            text:'/'
            on_press:calculator.validate(entry.text, self.text)


